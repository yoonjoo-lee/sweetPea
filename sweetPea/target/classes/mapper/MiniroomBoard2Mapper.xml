<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
<mapper namespace="pea.board.mapper.MiniroomBoard2Mapper">

<!-- 미니홈 글 작성 -->
<insert id="writemini" parameterType="MiniroomBoardVo">
 INSERT pea_minihome_board(
 	 uidx
 	,title
 	,content
 	,writer
 	,ip
 	,category
 	,secret
 ) VALUES(
 	 #{uidx}
 	,#{title}
 	,#{content}
 	,#{writer}
 	,#{ip}
 	,#{category}
 	,#{secret}
 )
</insert>

<select id="miniroomboardList" resultType="MiniroomBoardVo">
	 SELECT 
	 	  mbidx
	 	, uidx
	 	, title
	 	, CONVERT(content USING UTF8) as content
	 	, writer
	 	, date
	 	, ip
	 	, category
	 	, delyn
	 	, secret
	  FROM pea_minihome_board 
	 WHERE delyn='N'
</select>
 
 
</mapper>